@page "/products"
@using BlazorCRUD.Application.DTOs
@using BlazorCRUD.Application.Interfaces
@using BlazorCRUD.Domain.Entities
@inject IProductService ProductService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <h3 class="mb-4">Products</h3>

    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CreateNew">Add New Product</button>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (products is not null)
            {
                @foreach (var product in products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <button class="btn btn-warning btn-sm" @onclick="() => EditProduct(product.Id)">Edit</button>
                            <button class="btn btn-danger btn-sm ml-2" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No products found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
